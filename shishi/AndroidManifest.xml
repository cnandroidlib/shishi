            android:name="UMENG_APPKEY"
            android:value="5555c74ae0f55aed7d002c36" >
        </meta-data>
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="cb792890d0a6639cbc90205609131d12" />
