<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dust"
    android:paddingLeft="20dp"
    android:paddingTop="30dp" >

    <RelativeLayout
        android:id="@+id/edit_top"
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <EditText
            android:id="@+id/getfocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:visibility="visible" />

        <com.myth.shishi.wiget.TouchEffectImageView
            android:id="@+id/edit_keyboard"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/keyboard" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/edit_keyboard"
            android:gravity="center_vertical"
            android:text="临江仙"
            android:textColor="@color/black_text"
            android:textSize="28sp" />

        <com.myth.shishi.wiget.TouchEffectImageView
            android:id="@+id/edit_dict"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/dict" />

        <com.myth.shishi.wiget.TouchEffectImageView
            android:id="@+id/edit_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/edit_dict"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/info" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_top"
        android:layout_marginTop="20dp"
        android:paddingBottom="8dp"
        android:scrollbars="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>